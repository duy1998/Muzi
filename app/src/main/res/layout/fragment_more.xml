<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/colorBackgroundFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:textSize="22sp"
            android:fontFamily="@font/sf_ui_display_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorText"
            android:text="@string/more"
            tools:ignore="RtlCompat"/>

    <!--Setting-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/sf_ui_display_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="97dp"
            android:textColor="@color/colorText"
            android:text="@string/setting"
            android:alpha="0.5"
            tools:ignore="RtlCompat"/>
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="@id/layoutLanguage"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutLanguage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="125dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp">
        <ImageView android:layout_width="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:src="@mipmap/language"
        />
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:fontFamily="@font/sf_ui_display_regular"
                  android:text="@string/language"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  android:layout_gravity="center"
                  android:alpha="0.5"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:layout_marginRight="40dp"
                  android:id="@+id/tvLanguage"
                  android:fontFamily="@font/sf_ui_display_regular"
                  tools:text="English"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"

                   android:src="@mipmap/arrow"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="match_parent"
          android:layout_marginLeft="22dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@id/layoutLanguage"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"
          android:layout_marginStart="22dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutCountry"
            app:layout_constraintTop_toBottomOf="@id/layoutLanguage"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp">
        <ImageView android:layout_width="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:src="@mipmap/country"
        />
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:fontFamily="@font/sf_ui_display_regular"
                  android:text="@string/country"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  android:layout_gravity="center"
                  android:alpha="0.5"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:layout_marginRight="40dp"
                  android:id="@+id/tvCountry"
                  android:fontFamily="@font/sf_ui_display_regular"
                  tools:text="Viet Nam"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginStart="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:src="@mipmap/arrow"
                   tools:ignore="RtlCompat"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="match_parent"
          android:layout_marginStart="22dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@id/layoutCountry"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"
          tools:ignore="RtlCompat"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutTrending"
            app:layout_constraintTop_toBottomOf="@id/layoutCountry"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp">
        <ImageView android:layout_width="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:src="@mipmap/trending"
        />
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:fontFamily="@font/sf_ui_display_regular"
                  android:text="@string/trending_in"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  android:layout_gravity="center"
                  android:alpha="0.5"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:layout_marginRight="40dp"
                  android:id="@+id/tvTrending"
                  android:fontFamily="@font/sf_ui_display_regular"
                  tools:text="Viet Nam"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginStart="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:src="@mipmap/arrow"
                   tools:ignore="RtlCompat"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toBottomOf="@id/layoutTrending"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"/>

    <!--Appearance-->
    <TextView
            android:id="@+id/tvAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/sf_ui_display_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="280dp"
            android:textColor="@color/colorText"
            android:text="@string/appearance"
            android:alpha="0.5"
            tools:ignore="RtlCompat"/>
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="@id/layoutDarkMode"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutDarkMode"
            app:layout_constraintTop_toBottomOf="@id/tvAppearance"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_gravity="center"
                  android:fontFamily="@font/sf_ui_display_regular"
                  android:text="@string/darkmode"
                  android:layout_height="wrap_content"/>
        <Switch android:layout_width="52dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_height="32dp"
                tools:ignore="RtlCompat"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toBottomOf="@id/layoutDarkMode"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"/>

    <!--Facebook-->
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="@id/layoutFb"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutFb"
            app:layout_constraintTop_toBottomOf="@id/layoutDarkMode"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="74dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp">
        <ImageView android:layout_width="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:src="@mipmap/fb"
        />
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:fontFamily="@font/sf_ui_display_regular"
                  android:text="@string/muzic_on_facebook"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginStart="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:src="@mipmap/arrow"
                   tools:ignore="RtlCompat"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toBottomOf="@id/layoutFb"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutConnecting"
            app:layout_constraintTop_toBottomOf="@id/layoutFb"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp">
        <TextView android:layout_width="match_parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  android:fontFamily="@font/sf_ui_display_regular"
                  android:textSize="13sp"
                  android:textColor="#8a8a8f"
                  android:text="@string/connecting"
                  android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Support-->
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="@id/layoutHelp"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutHelp"
            app:layout_constraintTop_toBottomOf="@id/layoutConnecting"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="29dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp">
        <ImageView android:layout_width="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:src="@mipmap/helpp"
        />
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:fontFamily="@font/sf_ui_display_regular"
                  android:text="@string/help_support"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginStart="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:src="@mipmap/arrow"
                   tools:ignore="RtlCompat"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toBottomOf="@id/layoutHelp"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"
          android:layout_marginStart="22dp"
          tools:ignore="RtlCompat"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutFeedBack"
            app:layout_constraintTop_toBottomOf="@id/layoutHelp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp">
        <ImageView android:layout_width="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:src="@mipmap/email"
        />
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:textSize="17sp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:fontFamily="@font/sf_ui_display_regular"
                  android:text="@string/send_feedback"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="30dp"/>
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginStart="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:src="@mipmap/arrow"
                   tools:ignore="RtlCompat"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toBottomOf="@id/layoutFeedBack"
          android:background="@color/border"
          android:alpha="0.18"
          android:layout_height="1dp"
          android:layout_marginStart="22dp"
          tools:ignore="RtlCompat"/>
</androidx.constraintlayout.widget.ConstraintLayout>