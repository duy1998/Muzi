<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            tools:ignore="RtlCompat">
        <!--<com.google.android.youtube.player.YouTubeThumbnailView-->
                <!--android:id="@+id/thumnailView"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="70dp"-->
                <!--app:layout_constraintStart_toStartOf="parent"/>-->
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/avatarImageView"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/durationTextView"
                android:alpha="0.5"
                android:background="@color/colorBackground"
                tools:text="4:09"
                android:layout_gravity="end|top"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="47dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textColor="@color/colorText"
                android:fontFamily="@font/sf_ui_display_regular" tools:ignore="UnusedAttribute"/>
    </FrameLayout>
    <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="136dp"
            android:id="@+id/titleTextView"
            android:ellipsize="end"
            android:textColor="@color/colorText"
            tools:text="Taylor Swift - ME! (feat. Brendon Urie of Panic! At â€¦The Disco)"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat"/>
    <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="44dp"
            android:id="@+id/channelTextView"
            android:ellipsize="end"
            android:alpha="0.5"
            android:textColor="@color/colorText"
            tools:text="Taylor Swift.."
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat"
            android:layout_marginStart="136dp"/>
    <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/channelTextView"
            android:layout_marginTop="44dp"
            android:id="@+id/viewCountTextView"
            android:ellipsize="end"
            android:alpha="0.5"
            android:textColor="@color/colorText"
            tools:text="203M views"
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat"/>
    <ImageView android:layout_width="16dp"
               android:layout_height="4dp"
               android:id="@+id/settingImage"
               android:src="@mipmap/more"
               android:layout_marginEnd="24dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginTop="35dp" tools:ignore="RtlCompat"
    />


</androidx.constraintlayout.widget.ConstraintLayout>